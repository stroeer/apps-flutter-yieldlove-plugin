<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/yieldlove_ad_inner_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:id="@+id/ad_space_top"
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/ad_label"
            style="@style/AdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_label"
            app:layout_constraintTop_toBottomOf="@+id/ad_space_top"
            app:layout_constraintEnd_toEndOf="@id/yieldlove_ad" />

        <Space
            android:id="@+id/ad_space"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            app:layout_constraintTop_toBottomOf="@id/ad_label" />

        <com.yieldlove.adIntegration.YieldloveAdView
            android:id="@+id/yieldlove_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ad_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" />

        <View
            android:id="@+id/ad_placeholder"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/ad_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="200dp"/>

        <!-- between these two a PublisherAdView will be placed -->
        <!-- app:layout_constraintEnd_toEndOf="@id/ad_view_id"
            app:layout_constraintBottom_toBottomOf="@id/ad_view_id"
             -->

        <ImageView
            android:id="@+id/ad_debug_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <Space
            android:id="@+id/ad_space_bottom"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:layout_constraintTop_toBottomOf="@id/yieldlove_ad" />

    </LinearLayout>

</LinearLayout>